# 100_input_syslog
input {
    tcp {
        port => 2514
        type => syslog
    }
    udp {
        port => 2514
        type => syslog
    }
    redis {
        host => 'redis'
        data_type => list
        key => 'logstash'
        type => 'logstash'
    }
}

